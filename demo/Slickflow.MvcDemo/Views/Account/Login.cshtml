@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" name="viewport"
          content="text/html; charset=UTF-8; width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style rel="stylesheet" type="text/css">
    </style>
</head>
<body>
    <!-- Modal -->
    <div class="modal-body">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">SlickMaster</h3>
        </div>
        <div class="modal-body">
            <img src="~/Content/images/ajax-loader.gif" id="loading-indicator" style="position: fixed; left: 40%; top: 40%; display:none;" />
            <div class="login-wrap">
                <div class="panel-body" style="margin-left:20px;">
                    <div class="row">
                        <label>请选择系统角色: </label>
                        <select class="form-control input-lg m-bot15" id="ddlRoles">
                            <option value="0">--角色列表--</option>
                        </select>
                    </div>
                    <div class="row">
                        <label>请选择角色人员: </label>
                        <select class="form-control input-lg m-bot15" id="ddlUsers">
                            <option value="0">--人员列表--</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="accountmanager.login();">登 录</button>
        </div>
    </div>
    <script type="text/javascript" src="~/ViewJS/config.js"></script>
    <script type="text/javascript" src="~/ViewJS/accountmanager.js"></script>

    <script type="text/javascript">
        $(function () {
            accountmanager.loadRoles();

            $("#loginForm").submit(function (e) {
                if (accountmanager.isValidated === undefined
                    || accountmanager.isValidated === false)
                    e.preventDefault();
            });
        })
    </script>

</body>
</html>

